name: Build & Deploy Noemi Platform CAP Financial

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    env:
      STRIPE_SECRET_KEY: ${{ secrets.STRIPE_SECRET_KEY }}
      STRIPE_WEBHOOK_SECRET: ${{ secrets.STRIPE_WEBHOOK_SECRET }}
      NOEMI_CAP_API_URL: ${{ secrets.NOEMI_CAP_API_URL }}
      NOEMI_CAP_API_TOKEN: ${{ secrets.NOEMI_CAP_API_TOKEN }}
      STRIPE_PUBLIC_KEY: ${{ secrets.STRIPE_PUBLIC_KEY }}

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Go
        uses: actions/setup-go@v4
        with:
          go-version: 1.20

      - name: Build backend
        run: |
          go mod tidy
          go build -o backend/main ./backend

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 18

      - name: Install frontend deps
        run: |
          cd frontend
          npm ci

      - name: Build frontend
        run: |
          cd frontend
          npm run build

      - name: Deploy backend & frontend
        run: |
          chmod +x scripts/deploy.sh
          ./scripts/deploy.sh